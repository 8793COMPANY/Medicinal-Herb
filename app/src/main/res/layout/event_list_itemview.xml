<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">



    <ImageView
        android:id="@+id/herb_event_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHeight_percent="0.8"
        android:background="@drawable/round_shape_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></ImageView>

    <TextView
        android:id="@+id/event_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당첨자 발표 2022.6.30"
        android:textSize="10dp"
        android:textColor="#808080"
        android:fontFamily="@font/noto_sans_kr_thin"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/herb_event_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintHeight_percent="0.18"></TextView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/switch_track_on"
        android:text="당첨자 발표"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/noto_sans_kr_thin"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/herb_event_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintHeight_percent="0.18"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>