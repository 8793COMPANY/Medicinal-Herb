<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="168dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/stroke_corner_round_background"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:weightSum="3">



    <RelativeLayout
        android:id="@+id/album_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/album_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/nskr_medium"
            android:includeFontPadding="false"
            android:text="사진 보관함"
            android:textColor="@color/black"
            android:textSize="19dp"
            app:layout_constraintHorizontal_bias="0"></TextView>

        <ImageView
            android:id="@+id/album_icon"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/album_icon"
            app:layout_constraintDimensionRatio="7:6"
            app:layout_constraintWidth_percent="0.25"></ImageView>

    </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/filming_section"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintTop_toBottomOf="@+id/album_section"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nskr_medium"
                android:includeFontPadding="false"
                android:text="사진 촬영"
                android:textColor="@color/black"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_icon"
                android:layout_alignParentEnd="true"></ImageView>



        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/file_select_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintHeight_percent="0.335"
            app:layout_constraintTop_toBottomOf="@+id/filming_section"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#cacaca"
                app:layout_constraintHeight_percent="0.01"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/nskr_medium"
                android:includeFontPadding="false"
                android:text="파일 선택"
                android:textColor="@color/black"
                android:textSize="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/file_icon"
                android:layout_alignParentEnd="true"></ImageView>

        </RelativeLayout>









</LinearLayout>