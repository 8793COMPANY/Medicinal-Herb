<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/herb_img_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.76"
        app:layout_constraintVertical_bias="0">
        <ImageView
            android:id="@+id/herb_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"></ImageView>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/herb_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/noto_sans_kr_thin"
        app:layout_constraintTop_toBottomOf="@+id/herb_img_area"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.24"
        app:layout_constraintVertical_bias="0"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>